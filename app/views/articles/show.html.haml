.article--wrapper
  .container
    %article{ id: 'content', tabindex: '0' }
      - if @root_collections.any?
        %p= render partial: 'shared/article/delimited_collection_links', locals: { links: @root_collections }

      = render partial: 'shared/article/header', locals: { title: @article.title, summary: @article.article_summary, collections: @collections }
      = render partial: 'shared/article/main', locals: { content: @article.article_body }
      = render partial: 'shared/article/footer', locals: { collections: @collections }

    - if @collections.any?
      %aside
        - @collections.each do |collection|
          = render partial: 'shared/article/aside_block', locals: { title: collection.name, collection: collection, graph_id: @article.graph_id }
